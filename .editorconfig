root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.cs]
dotnet_diagnostic.IDE0090.severity = none
dotnet_diagnostic.IDE0018.severity = none
dotnet_diagnostic.IDE0030.severity = none

# UNT0006: Incorrect message signature
dotnet_diagnostic.UNT0006.severity = none

[**.{cs,shader}]
indent_style = tab
indent_size = tab
tab_width = 4

[**.{prefab,unity,asset,playable}]
indent_style = space
indent_size = 2
